<UserControl x:Class="ControlesPersonalizados.TxtSpellChecker.spellBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlesPersonalizados.TxtSpellChecker"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="140">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,0,0">
        <TextBox x:Name="textBox"  TextWrapping="Wrap" SpellCheck.IsEnabled="True"/>
    </Grid>
</UserControl>
